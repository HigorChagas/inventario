<%- include('includes/header.ejs') %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <header class="card-header">
            <h4 class="card-title mt-2 text-center">Registro</h4>
          </header>
          <article class="card-body">
            <form action="/register" method="post">
              <div class="form-row">
                <% if (successMessage) { %>
                  <div class="alert alert-success text-center" role="alert">
                    <%= successMessage %>
                  </div>
                  <% } %>

                    <% if (errorMessage) { %>
                      <div class="alert alert-danger text-center" role="alert">
                        <%= errorMessage %>
                      </div>
                      <% } %>
                <div class="col form-group">
                  <label for="username">Nome de usuário</label>
                  <input type="text" name="username" id="username" class="form-control" placeholder="" required>
                </div>
                <div class="col form-group">
                  <label for="name">Nome Completo</label>
                  <input type="text" name="name" id="name" class="form-control" placeholder="" required>
                </div>
              </div> <!-- form-row end.// -->
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" placeholder="">
                <small class="form-text text-muted">Seus dados não serão compartilhados</small>
              </div> <!-- form-group end.// -->
              <div class="form-group">
                <label for="password">Senha</label>
                <input class="form-control" name="password" id="password" type="password">
                <div class="invalid-feedback">A senha deve conter pelo menos uma letra maiúscula e um número.</div>
              </div> <!-- form-group end.// -->
              <div class="form-group d-flex justify-content-center">
                <button type="submit" class=" mt-3 btn btn-success btn-block">Registrar</button>
              </div> <!-- form-group// -->
            </form>
        </div>
        <!--container end.//-->
        <%- include('includes/footer.ejs') %>
